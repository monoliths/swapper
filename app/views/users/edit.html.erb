<h1 style="text-align:center">Profile Settings</h1>

<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :name, required: false %>
    <%= f.input :password, required: false %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit Changes" %>
  </div>
<% end %>
<br>
<%= gravatar_for @user %>
<%= link_to "Change Gravatar", "http://gravatar.com/emails", class: "btn btn-sm btn-default", target: "_blank" %>
<br><br>

<%= link_to "Delete my account", @user, method: :delete, class: "btn btn-sm btn-danger",
                data: { confirm: "You sure? This cant be undone!" } %>
